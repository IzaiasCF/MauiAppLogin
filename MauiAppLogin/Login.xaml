<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiAppLogin.Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">

    <VerticalStackLayout
        Padding="10"
        Spacing="10"
        VerticalOptions="Center">

        <Label HorizontalOptions="Center" Text="Sistema de Login" />

        <Label Text="Usuário: " />
        <Entry x:Name="txt_usuario" Placeholder="Usuário" />

        <Label Text="Senha" />
        <Entry
            x:Name="txt_senha"
            IsPassword="True"
            Placeholder="Senha" />

        <Button
            Clicked="Button_Clicked"
            HorizontalOptions="Center"
            Text="Entrar" />

    </VerticalStackLayout>
    
</ContentPage>